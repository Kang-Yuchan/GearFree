type User {
  id: ID! @id
  username: String! @unique
  email: String! @unique
  items: [Item!]!
  likes: [Like!]!
  comments: [Comment!]!
  seller: [User!]! @relation(name: "TradeRelation")
  buyer: [User!]! @relation(name: "TradeRelation")
}

type Item {
  id: ID! @id
  user: User!
  files: [File!]!
  price: Int!
  kind: String!
  likes: [Like!]!
  comments: [Comment!]!
  usingPro: String
}

type Like {
  id: ID! @id
  user: User!
  item: Item!
}

type Comment {
  id: ID! @id
  text: String!
  user: User!
  item: Item!
}

type File {
  id: ID! @id
  url: String!
  item: Item!
}